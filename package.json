{
  "name": "stockmarket-simulation",
  "version": "0.1.0",
  "homepage": ".",
  "private": true,
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!<rootDir>/node_modules/",
      "!src/**/*.story.{js,jsx,ts,tsx}",
      "!src/**/index.{ts,tsx}",
      "!src/**/*Mocks.{ts,tsx}",
      "!src/**/*Selectors.{ts,tsx}",
      "!src/**/testUtils.{ts,tsx}",
      "!src/registerServiceWorker.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    }
  },
  "dependencies": {
    "material-design-icons": "^3.0.1",
    "moment": "^2.22.2",
    "react": "^16.5.2",
    "react-bootstrap": "^0.32.1",
    "react-dom": "^16.5.2",
    "react-notification-system": "^0.2.17",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.3.1",
    "react-scripts-ts": "3.1.0",
    "recharts": "^1.3.4",
    "redux": "^4.0.1",
    "redux-persist": "^5.10.0",
    "redux-saga": "^0.16.2",
    "reselect": "^4.0.0"
  },
  "devDependencies": {
    "node-sass-chokidar": "^1.3.4",
    "npm-run-all": "^4.1.3",
    "@storybook/addon-actions": "^3.4.11",
    "@storybook/addon-knobs": "^3.4.11",
    "@storybook/addons": "^3.4.11",
    "@storybook/react": "^3.4.11",
    "@types/enzyme": "^3.1.13",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/jest": "^23.3.3",
    "@types/node": "^10.12.0",
    "@types/react": "16.4.18",
    "@types/react-bootstrap": "^0.32.14",
    "@types/react-dom": "^16.0.9",
    "@types/react-notification-system": "^0.2.39",
    "@types/react-redux": "^6.0.9",
    "@types/react-router-dom": "^4.3.1",
    "@types/recharts": "^1.1.0",
    "@types/storybook__addon-actions": "^3.4.1",
    "@types/storybook__addon-knobs": "^3.3.1",
    "@types/storybook__react": "^3.0.9",
    "cross-env": "^5.2.0",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "latest",
    "redux-devtools-extension": "^2.13.5",
    "typescript": "^2.9.2"
  },
  "scripts": {
    "build-css": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
    "start-ts": "react-scripts-ts start",
    "start": "npm-run-all -p watch-css start-ts",
    "build": "npm run build-css && react-scripts-ts build",
    "test-watch": "react-scripts-ts test --env=jsdom",
    "test": "react-scripts-ts test --env=jsdom --setupTestFrameworkScriptFile=raf/polyfill --coverage",
    "storybook": "start-storybook -p 6006"
  }
}

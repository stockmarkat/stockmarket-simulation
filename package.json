{
  "name": "stockmarket-simulation",
  "version": "0.1.0",
  "homepage": ".",
  "private": true,
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!<rootDir>/node_modules/",
      "!src/**/*.story.{js,jsx,ts,tsx}",
      "!src/**/index.{ts,tsx}",
      "!src/**/*Mocks.{ts,tsx}",
      "!src/**/*Selectors.{ts,tsx}",
      "!src/**/testUtils.{ts,tsx}",
      "!src/registerServiceWorker.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    }
  },
  "dependencies": {
    "enzyme": "^3.2.0",
    "json-loader": "^0.5.7",
    "moment": "^2.22.1",
    "node-sass-chokidar": "^1.2.2",
    "npm-run-all": "^4.1.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.2.2",
    "react-scripts-ts": "2.15.1",
    "redux": "^3.7.2",
    "redux-saga": "^0.16.0",
    "reselect": "^3.0.1"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.4.1",
    "@storybook/addon-knobs": "^3.4.1",
    "@storybook/addons": "^3.4.1",
    "@storybook/react": "^3.4.1",
    "@types/jest": "^22.1.1",
    "@types/node": "^9.4.2",
    "@types/react": "^16.0.36",
    "@types/react-dom": "^16.0.3",
    "@types/react-redux": "^5.0.16",
    "@types/react-router-dom": "^4.2.6",
    "@types/storybook__addon-actions": "^3.0.3",
    "@types/storybook__addon-knobs": "^3.3.1",
    "@types/storybook__react": "^3.0.7",
    "cross-env": "^5.1.1",
    "nswag": "^11.14.1",
    "redux-devtools-extension": "^2.13.2",
    "typescript": "^2.7.1"
  },
  "scripts": {
    "build-css": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
    "start-ts": "react-scripts-ts start",
    "start": "npm-run-all -p watch-css start-ts",
    "build": "npm run build-css && react-scripts-ts build",
    "test-watch": "react-scripts-ts test --env=jsdom",
    "test": "react-scripts-ts test --env=jsdom --setupTestFrameworkScriptFile=raf/polyfill --coverage",
    "storybook": "start-storybook -p 6006"
  }
}
